<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="myTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/nliveo_green_colorPrimary</item>
        <item name="colorPrimaryDark">@color/nliveo_green_colorPrimaryDark</item>
        <item name="colorAccent">@color/nliveo_green_colorPrimaryDark</item>
    </style>

    <style name="nLiveoDrawer" parent="Theme.nLiveo">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nliveo_green_colorPrimary</item>
        <item name="colorPrimaryDark">@color/nliveo_green_alpha_colorPrimaryDark</item>
        <item name="colorAccent">@color/nliveo_green_colorPrimaryDark</item>
    </style>

    <!-- Contact style theme -->
    <style name="ContactListView">
        <item name="android:verticalScrollbarPosition">right</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

    <style name="listViewActivatedStyle"/>

    <style name="quickContactBadgeStyle">
        <item name="android:background">@drawable/quickcontact_badge_small</item>
    </style>

    <style name="searchTextHiglight">
        <item name="android:textColor">@color/nliveo_green_colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="contactNameTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="addressButton"/>

    <style name="addressHeader" parent="@android:style/TextAppearance.Small">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="addressDetail" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
        <item name="android:textIsSelectable">true</item>
    </style>
<!-- Contact style theme -->

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/nliveo_green_alpha_colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/nliveo_green_colorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/nliveo_green_colorPrimary</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/nliveo_green_colorPrimaryDark</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/nliveo_green_alpha_colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/nliveo_green_alpha_colorPrimaryDark</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
